<h1>Listing places</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Lat</th>
    <th>Long</th>
    <th>URL</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @places.each do |place| %>
  <tr>
    <td><%= place.name %></td>
    <td><%= place.address %></td>
    <td><%= place.latitude %></td>
    <td><%= place.longitude %></td>
    <td><%= link_to place.url %></td>
    <td><%= place.active %></td>
    <td><%= link_to 'Show', place %></td>
    <td><%= link_to 'Edit', edit_place_path(place) %></td>
    <td><%= link_to 'Destroy', place, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<h1>Listing places witihin 20 miles of Fairland</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Distance</th>
  </tr>

<% Place.near('Fairland, IN, US', 20).each do |place| %>
  <tr>
    <td><%= place.name %></td>
    <td><%= place.address %></td>
    <td><%= place.distance_from("Fairland, IN, US") %></td>
  </tr>
<% end %>
</table>

